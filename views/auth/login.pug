extends ../layout/common

block content
	h1 Login

	if errors
		each error in errors
			.alert.alert-danger= error

	form(method="POST")
		.form-group.mb-3
			label(for="email").form-label Email
			input#email.form-control(name="email" type="email" value=values ? values.email : "")
		.form-gorup.mb-3
			label(for="password").form-label Password
			input#password.form-control(name="password" type="password" value=values ? values.password : "")
		button.btn.btn-primary Login